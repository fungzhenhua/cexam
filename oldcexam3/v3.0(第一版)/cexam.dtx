    }{\relax}
%    \end{macrocode}
% 以上对body排版,如仍然不能令\pkg{\#4=0pt},则继续对tail排版
%    \begin{macrocode}
    \dim_compare:nTF {#2 > 0pt}
    {
      \bool_if:NTF \g__cexam_sep_tl_bool
      {
	\cexam_get_rec:nnnn {#1}{#2}{#3}{\sep_tl_dim:}

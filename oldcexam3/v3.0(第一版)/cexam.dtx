%    \begin{macrocode}
  \cs_new:Npn \cexam_get_rec:nnnn #1#2#3#4
  {
    \bool_if:NTF \g__cexam_sep_tl_bool
    {\exp_args:No \cexam_sep:n #4 \scan_stop:}
    {\cexam_sep:n #4 \scan_stop:}
    \cexam_get_rec_i:nNnNnn {1}{#1}{\cexam_txt_sub_dim}{#2}{#3}{\sep_hd_dim:}
%    \end{macrocode}

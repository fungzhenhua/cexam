\def\Exam@every #1.#2\par{%
  \ifthenelse{\isin{s}{#1}}{%
    \Selection #1.#2\par%
  }{%
    \ifthenelse{\isin{b}{#1}}{%
      \Blank #1.#2\par%
    }{%
